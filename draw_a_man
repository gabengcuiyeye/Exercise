    <title>Title</title>
    <style>
        .sun{
            width: 60px;
            height: 60px;
            position: absolute;
            top: 73px;
            left: 400px;
            border-radius: 50%;
            background-color: #FFEE44;
            z-index: 88;
        }
        .sun:before{
            display: inline-block;
            content: "";
            background-color: black;
            border-radius: 15% 107% 15% 217%;
            width: 50px;
            height: 50px;
            transform: rotateZ(-41deg);
            top: -16px;
            left: 5px;
            position: absolute;
        }
    </style>
